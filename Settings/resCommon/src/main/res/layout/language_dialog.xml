<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="680dip"
    android:layout_height="408dip"
    android:layout_gravity="center"
    android:background="@drawable/icon_bg1" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/lang_top_margin"
        android:text="@string/language_setting"
        android:textColor="@color/white"
        android:textSize="@dimen/lang_title_sp" />

    <ListView
        android:id="@+id/language_imput_lv"
        android:layout_width="644dip"
        android:layout_height="300dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dip"
        android:divider="@drawable/list_divider"
        android:fadeScrollbars="false"
        android:listSelector="@drawable/select_item_bg"
        android:paddingLeft="12dip"
        android:paddingRight="12dip"
        android:scrollbarStyle="outsideInset"
        android:scrollbarThumbVertical="@drawable/scrollbar" />

</FrameLayout>