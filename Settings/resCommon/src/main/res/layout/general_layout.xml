<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main_general"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="0dp"
        android:padding="0dp"

        >
    <TextView
            style="@style/first_title"
            android:text="@string/header_general"/>
    <LinearLayout
            style="@style/ll_list"
            android:orientation="vertical">
        <RelativeLayout
                style="@style/rl_item"
                android:visibility="gone">
            <TextView
                    android:text="@string/item_not_appstore"
                    style="@style/item_textView" />

            <ImageView
                    android:visibility="visible"
                    style="@style/switch_image_style" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/item_hint_sound"
            style="@style/rl_item">

            <TextView
                style="@style/item_textView"
                android:text="@string/item_touch_sound" />

            <ImageView
                android:id="@+id/item_hint_sound_iv"
                style="@style/switch_image_style"
                android:visibility="visible" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/item_lock_screen"
            style="@style/rl_item">

            <TextView
                style="@style/item_textView"
                android:text="@string/item_lock_screen" />

            <ImageView style="@style/more_image_style" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/item_usb_lock"
            style="@style/rl_item">

            <TextView
                style="@style/item_textView"
                android:text="@string/item_usb_lock" />

            <ImageView style="@style/more_image_style" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/item_easy_touch"
            style="@style/rl_item">

            <TextView
                style="@style/item_textView"
                android:text="@string/item_floating_button" />

            <ImageView
                android:id="@+id/item_easy_touch_iv"
                style="@style/switch_image_style" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/item_four_screen"
            style="@style/rl_item">

            <TextView
                style="@style/item_textView"
                android:text="@string/item_four_distribution" />

            <ImageView
                android:id="@+id/item_four_screen_iv"
                style="@style/switch_image_style" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/triple_bond_one"
            style="@style/rl_item">

            <TextView
                style="@style/item_textView"
                android:text="@string/item_triple_bonding" />

            <ImageView
                android:id="@+id/triple_bond_one_iv"
                style="@style/switch_image_style" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/five_touch_mode"
            style="@style/rl_item">

            <TextView
                style="@style/item_textView"
                android:text="@string/item_five_touch" />

            <ImageView
                android:id="@+id/five_touch_mode_iv"
                style="@style/switch_image_style" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
