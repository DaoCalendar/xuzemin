<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:id="@+id/main_network"
        >
    <TextView
            style="@style/first_title"
            android:text="@string/header_network"/>
    <LinearLayout
            style="@style/ll_list"
            android:orientation="vertical">
        <RelativeLayout
                style="@style/rl_item">
            <TextView
                    android:text="@string/item_wire"
                    style="@style/item_textView" />
            <TextView
                    style="@style/item_textView_right"
                    android:text="@string/status_on"/>
            <ImageView
                    android:visibility="visible"
                    style="@style/more_image_style" />
        </RelativeLayout>
        <RelativeLayout style="@style/rl_item">
            <TextView
                    style="@style/item_textView"
                    android:text="@string/item_wifi"/>
            <TextView
                    style="@style/item_textView_right"
                    android:text="@string/status_on"/>
            <ImageView
                    android:visibility="visible"
                    style="@style/more_image_style" />
        </RelativeLayout>
        <RelativeLayout style="@style/rl_item">
            <TextView
                    style="@style/item_textView"
                    android:text="@string/item_pppoe"/>
            <TextView
                    style="@style/item_textView_right"
                    android:text="@string/status_off"/>
            <ImageView
                    style="@style/more_image_style" />
        </RelativeLayout>
        <RelativeLayout style="@style/rl_item">
            <TextView
                    style="@style/item_textView"
                    android:text="@string/item_hotspot"/>
            <TextView
                    style="@style/item_textView_right"
                    android:text="@string/status_off"/>
            <ImageView
                    style="@style/more_image_style" />

        </RelativeLayout>
        <RelativeLayout style="@style/rl_item">
            <TextView
                    style="@style/item_textView"
                    android:text="@string/item_bluetooth"/>
            <TextView
                    style="@style/item_textView_right"
                    android:text="@string/status_on"/>
            <ImageView
                    style="@style/more_image_style" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
