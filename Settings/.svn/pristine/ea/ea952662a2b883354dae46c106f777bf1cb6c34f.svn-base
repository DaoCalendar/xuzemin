<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main_general"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="0dp"
        android:padding="0dp"

        >
    <TextView
            style="@style/first_title"
            android:text="@string/header_general"/>
    <LinearLayout
            style="@style/ll_list"
            android:orientation="vertical">
        <RelativeLayout
                style="@style/rl_item"
                android:visibility="gone">
            <TextView
                    android:text="@string/item_not_appstore"
                    style="@style/item_textView" />

            <ImageView
                    android:visibility="visible"
                    style="@style/switch_image_style" />
        </RelativeLayout>
        <RelativeLayout style="@style/rl_item">
            <TextView
                    style="@style/item_textView"
                    android:text="@string/item_touch_sound"/>

            <ImageView
                    android:visibility="visible"
                    style="@style/switch_image_style" />
        </RelativeLayout>
        <RelativeLayout style="@style/rl_item">
            <TextView
                    style="@style/item_textView"
                    android:text="@string/item_child_lock"/>

            <ImageView
                    style="@style/switch_image_style" />
        </RelativeLayout>
        <RelativeLayout style="@style/rl_item">
            <TextView
                    style="@style/item_textView"
                    android:text="@string/item_usb_lock"/>

            <ImageView
                    style="@style/switch_image_style" />

        </RelativeLayout>
        <RelativeLayout style="@style/rl_item">
            <TextView
                    style="@style/item_textView"
                    android:text="@string/item_floating_button"/>

            <ImageView
                    style="@style/switch_image_style" />
        </RelativeLayout>
        <RelativeLayout style="@style/rl_item">
            <TextView
                    style="@style/item_textView"
                    android:text="@string/item_four_distribution"/>

            <ImageView
                    style="@style/switch_image_style" />

        </RelativeLayout>
        <RelativeLayout style="@style/rl_item">
            <TextView
                    style="@style/item_textView"
                    android:text="@string/item_triple_bonding"/>

            <ImageView
                    style="@style/switch_image_style" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
