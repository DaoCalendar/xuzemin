<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="600dp"
             android:layout_marginTop="222dp"
             android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_gravity="center_horizontal"
             android:orientation="vertical"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toTopOf="parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/top_margin"
            android:text="@string/system_restore_factory"
            android:textColor="@color/white"
            android:textSize="@dimen/title_sp" />

    <LinearLayout

            android:layout_width="553.3dip"
            android:layout_height="264dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="72dip"
            android:background="@drawable/local_bg1"
            android:orientation="vertical" >

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="89.3dip"
                android:gravity="center"
                android:text="@string/restore_tips_2"
                android:textColor="@color/half_white"
                android:textSize="@dimen/content_sp" />
    </LinearLayout>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="203.3dip"
            android:background="@drawable/ic_home_title_application7"
            android:contentDescription="@string/img" />

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="20dip"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

        <Button
                android:id="@+id/restore_cancel"
                android:layout_width="72dip"
                android:layout_height="34.7dip"
                android:background="@drawable/selector_btn_bg"
                android:gravity="center"
                android:text="@android:string/cancel"
                android:textColor="@color/item_text_color"
                android:textSize="@dimen/btn_sp" />

        <Button
                android:id="@+id/restore_ok"
                android:layout_width="72dip"
                android:layout_height="34.7dip"
                android:layout_marginLeft="161dip"
                android:background="@drawable/selector_btn_bg"
                android:text="@android:string/ok"
                android:textColor="@color/item_text_color"
                android:textSize="@dimen/btn_sp" />
    </LinearLayout>

</FrameLayout>