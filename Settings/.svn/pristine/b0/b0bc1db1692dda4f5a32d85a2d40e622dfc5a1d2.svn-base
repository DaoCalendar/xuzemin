<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main_security"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="0dp"
        android:padding="0dp"

        >
    <TextView
            style="@style/first_title"
            android:text="@string/header_security"
            />
    <LinearLayout
            style="@style/ll_list"
            android:orientation="vertical">
        <RelativeLayout
                android:id="@+id/item_app_permissions"
                style="@style/rl_item">
            <TextView
                    style="@style/item_textView"
                    android:text="@string/item_app_permissions"
                    />

            <ImageView
                    android:id="@+id/im_item_app_permissions"
                    android:visibility="visible"
                    style="@style/more_image_style"
                    />
        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/item_unknown_store"
                style="@style/rl_item">
            <TextView
                    android:id="@+id/tv_item_unknown_store"
                    style="@style/item_textView"
                    android:text="@string/item_unknown_store"/>

            <ImageView
                    android:id="@+id/im_item_unknown_store"
                    android:visibility="visible"
                    style="@style/switch_image_style" />
        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/item_camera_permissions"
                style="@style/rl_item">
            <TextView
                    style="@style/item_textView"
                    android:text="@string/item_camera_permissions"/>

            <ImageView
                    android:id="@+id/im_item_camera_permissions"
                    style="@style/switch_image_style" />
        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/item_udisk_permissions"
                style="@style/rl_item">
            <TextView
                    style="@style/item_textView"
                    android:text="@string/item_udisk_permissions"/>

            <ImageView
                    android:id="@+id/im_item_udisk_permissions"
                    style="@style/switch_image_style" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
