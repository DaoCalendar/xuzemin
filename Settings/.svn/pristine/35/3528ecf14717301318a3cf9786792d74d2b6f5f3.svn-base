<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main_time_date"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="0dp"
        android:padding="0dp"
        >
    <TextView
            style="@style/first_title"
            android:text="@string/header_time_date"/>
    <LinearLayout
            style="@style/ll_list"
            android:orientation="vertical">
        <RelativeLayout
                style="@style/rl_item">
            <TextView
                    android:text="@string/item_24_hour_format"
                    style="@style/item_textView" />

            <ImageView
                    android:visibility="visible"
                    style="@style/switch_image_style" />
        </RelativeLayout>
        <RelativeLayout style="@style/rl_item">
            <TextView
                    style="@style/item_textView"
                    android:text="@string/item_automatic"/>

            <ImageView
                    android:visibility="visible"
                    style="@style/switch_image_style" />
        </RelativeLayout>
        <RelativeLayout style="@style/rl_item">
            <TextView
                    style="@style/item_textView"
                    android:text="@string/item_timezone"/>
            <TextView
                    style="@style/item_textView_right"
                    android:text="@string/right_timezone"/>
            <ImageView
                    style="@style/more_image_style" />
        </RelativeLayout>
        <RelativeLayout style="@style/rl_item">
            <TextView
                    style="@style/item_textView"
                    android:text="@string/item_time_format"/>
            <TextView
                    style="@style/item_textView_right"
                    android:text="@string/right_time_format"/>
            <ImageView
                    style="@style/more_image_style" />

        </RelativeLayout>
        <RelativeLayout style="@style/rl_item">
            <TextView
                    style="@style/item_textView"
                    android:text="@string/item_on_off"/>
            <ImageView
                    style="@style/more_image_style" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
