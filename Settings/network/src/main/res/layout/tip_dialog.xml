<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="473.3dip"
    android:layout_height="309.3dip"
    android:layout_gravity="center"
    android:background="@drawable/shape_stk_bg"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="26.7dip"
        android:text="@string/tip"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <FrameLayout
        android:layout_width="388dip"
        android:layout_height="174.7dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="2dp"
        android:background="@drawable/shape_net_state" >

        <TextView
            android:id="@+id/tip_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="13.3dip"
            android:layout_marginTop="14dip"
            android:lineSpacingExtra="8dip"
            android:text="@string/tip_close"
            android:textColor="@color/half_white"
            android:textSize="13.3sp" />

        <!-- 34dip -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="16dip"
            android:paddingLeft="18.7dip"
            android:paddingRight="18.7dip"
            android:text="@string/confirm_close"
            android:textColor="@color/half_white"
            android:textSize="13.3sp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="320dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16.3dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/tip_ok_btn"
            android:layout_width="90dip"
            android:layout_height="29.3dip"
            android:background="@drawable/selector_btn_bg"
            android:text="@android:string/ok"
            android:textColor="@drawable/item_text_color"
            android:textSize="17sp" />

        <Button
            android:id="@+id/tip_cancle_btn"
            android:layout_width="90dip"
            android:layout_height="29.3dip"
            android:layout_marginLeft="105.3dip"
            android:background="@drawable/selector_btn_bg"
            android:gravity="center"
            android:text="@android:string/cancel"
            android:textColor="@drawable/item_text_color"
            android:textSize="17sp" />
    </LinearLayout>

</LinearLayout>