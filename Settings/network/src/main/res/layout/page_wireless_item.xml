<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="600dp"
             android:layout_height="60dp"
             android:layout_centerVertical="true">

    <TextView
            style="@style/item_textView"
            android:id="@+id/wifi_name_tv"
            android:gravity="left|center_vertical"
            android:layout_width="wrap_content"
            android:text="@string/ip_address"
    />

    <TextView
            style="@style/item_textView_right"
            android:id="@+id/wifi_connecting_tv"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="72dp"
            android:gravity="center_vertical"
            android:textSize="20sp"
    />
    <!-- android:textColor="@drawable/item_text_color" -->

    <ImageView
            android:id="@+id/wifi_state_iv"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="18.7dp"
    />

</FrameLayout>