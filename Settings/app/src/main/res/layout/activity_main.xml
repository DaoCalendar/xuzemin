<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:background="@mipmap/main_bg"
        >
        <LinearLayout android:layout_width="@dimen/ll_main_size"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_horizontal"
                      android:orientation="vertical">

            <View android:layout_width="match_parent"
                    android:layout_height="30dp"/>

            <!-- 设备 -->
            <include
                    layout="@layout/device_layout"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_margin="0dp"
                    android:padding="0dp"
            />

            <View style="@style/divider_line_style" />

            <!-- 网络 -->
            <include
                    layout="@layout/net_layout"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_margin="0dp"
                    android:padding="0dp"
            />

            <View style="@style/divider_line_style" />

            <!-- 一般设置 -->
            <include
                    layout="@layout/general_layout"
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:layout_margin="0dp"
                    android:padding="0dp"
            />

            <View style="@style/divider_line_style" />

            <!-- 语言和输入 -->
            <include
                    layout="@layout/input_language_layout"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_margin="0dp"
                    android:padding="0dp"
            />
            <View style="@style/divider_line_style" />
            <!-- 时间和日期 -->
            <include
                    layout="@layout/time_date_layout"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_margin="0dp"
                    android:padding="0dp"
            />

            <View style="@style/divider_line_style" />

            <!-- 安全与隐私 -->
            <include
                    layout="@layout/security_layout"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="0dp"
                    android:padding="0dp"
                    />
            <View style="@style/divider_line_style" />
            <!-- 关于设备 -->
            <include
                    layout="@layout/about_device_layout"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="0dp"
                    android:padding="0dp"
            />
            <View style="@style/divider_line_style" />
            <View android:layout_width="match_parent"
                    android:layout_height="30dp"/>
        </LinearLayout>
</ScrollView>