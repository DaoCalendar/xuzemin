<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/root_right_menu"
                android:layout_width="78px"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="0dp"
                android:layout_margin="0dp">
    <!--android:background="@drawable/btn_menu_bg_shape">-->

    <!-- 箭头按钮 -->
    <RelativeLayout
        android:id="@+id/rl_btn_arrow"
        android:layout_width="match_parent"
        android:layout_height="67px"
        android:padding="0dp"
        android:layout_margin="0dp"
        android:background="@drawable/shape_all"
        >
        <ImageView
            android:id="@+id/btn_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_centerInParent="true"
            android:src="@drawable/btn_arrow_left_normal"/>
        <!--<ImageView
            android:id="@+id/btn_arrow_shrink"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:alpha="0.5"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/btn_arrow_right_normal"/>-->
    </RelativeLayout>

    <!-- 菜单按钮项 -->
    <RelativeLayout
        android:id="@+id/menu_layout"
        android:layout_below="@+id/rl_btn_arrow"
        android:layout_width="match_parent"
        android:layout_height="415px"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8px"
        android:padding="0dp"
        android:background="@drawable/shape_all">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="38px"
            android:layout_height="38px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26px"
            android:src="@drawable/btn_back_normal"/>

