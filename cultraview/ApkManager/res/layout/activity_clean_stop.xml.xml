<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root_view"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="71dp"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ll_app_stop_select"
            android:layout_width="wrap_content"
            android:layout_height="76dp"
            android:background="@drawable/ll_select_bg"
            android:focusable="true"
            android:orientation="horizontal"
            android:paddingLeft="7.5dp"
            android:paddingRight="19dip" >

            <ImageView
                android:id="@+id/iv_app_top_back"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginLeft="24.5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/backstage_focus"
                android:contentDescription="@string/img"
                android:focusable="false" />

            <TextView
                android:id="@+id/tv_app_top_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7.5dp"
                android:layout_marginTop="30dp"
                android:gravity="center_vertical"
                android:text="@string/appstarting"
                android:textColor="@color/white"
                android:textSize="27sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_app_clean_select"
            android:layout_width="wrap_content"
            android:layout_height="76dp"
            android:background="@drawable/ll_select_bg"
            android:focusable="true"
            android:orientation="horizontal"
            android:paddingLeft="7.5dp"
            android:paddingRight="19dip" >

            <ImageView
                android:id="@+id/iv_app_top_clean"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/cleancache"
                android:contentDescription="@string/img"
                android:focusable="false" />

            <TextView
                android:id="@+id/tv_app_top_clean"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7.5dp"
                android:layout_marginTop="30dp"
                android:gravity="center_vertical"
                android:text="@string/cleancache"
                android:textColor="#50ffffff"
                android:textSize="27sp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="71dp"
        android:contentDescription="@string/img"
        android:focusable="false"
        android:src="@drawable/all_top_line" />

    <android.support.v4.view.ViewPager
        android:id="@+id/clean_apk_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="72dp"
        android:clickable="true"
        android:focusable="true" />

</FrameLayout>