<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/picture_over_scan_detail_layout"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:viewBindingIgnore="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_10">

            <Button
                android:id="@+id/btn_picture_over_scan_dtv"
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_29"
                android:textColor="#ffffffff"
                android:textSize="@dimen/sp_12"
                android:background="@color/colorUnFocus"
                android:text="DTV" />

            <Button
                android:id="@+id/btn_picture_over_scan_atv"
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_29"
                android:textColor="#ffffffff"
                android:textSize="@dimen/sp_12"
                android:background="@color/colorUnFocus"
                android:text="ATV" />

            <Button
                android:id="@+id/btn_picture_over_scan_av"
                android:layout_width="@dimen/dp_70"

                android:layout_height="@dimen/dp_29"
                android:textColor="#ffffffff"
                android:textSize="@dimen/sp_12"
                android:layout_marginLeft="@dimen/dp_1"
                android:background="@color/colorUnFocus"
                android:text="AV" />

            <Button
                android:id="@+id/btn_picture_over_scan_ypbpr"
                android:layout_width="@dimen/dp_70"

                android:layout_height="@dimen/dp_29"
                android:textColor="#ffffffff"
                android:textSize="@dimen/sp_12"
                android:layout_marginLeft="@dimen/dp_1"
                android:background="@color/colorUnFocus"
                android:text="YPbPr"/>

            <Button
                android:id="@+id/btn_picture_over_scan_hdmi"
                android:layout_width="@dimen/dp_70"

                android:layout_height="@dimen/dp_29"
                android:textColor="#ffffffff"
                android:textSize="@dimen/sp_12"
                android:layout_marginLeft="@dimen/dp_1"
                android:background="@color/colorUnFocus"
                android:text="HDMI" />

            <Button
                android:id="@+id/btn_picture_over_scan_vga"
                android:visibility="gone"
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_29"
                android:textColor="#ffffffff"
                android:textSize="@dimen/sp_12"
                android:layout_marginLeft="@dimen/dp_1"
                android:background="@color/colorUnFocus"
                android:text="VGA" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:id="@+id/ll_picture_over_scan_hsize"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="@dimen/dp_10"
                style="@style/item_title"
                android:layout_width="@dimen/dp_80"
                android:layout_height="wrap_content"
                android:text="H Size" />

            <SeekBar
                android:id="@+id/picture_over_scan_hsize"
                android:max="200"
                style="@style/adc_seekbar"/>

            <TextView
                android:id="@+id/picture_over_scan_hsize_text"
                style="@style/item_title"
               android:layout_width="@dimen/dp_35"
                android:layout_height="wrap_content"
                android:text="50" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_picture_over_scan_hposition"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_marginLeft="@dimen/dp_10"
                android:id="@+id/picture_adc_ggain"
                style="@style/item_title"
                android:layout_width="@dimen/dp_80"
                android:layout_height="wrap_content"
                android:text="H Position  " />

            <SeekBar
                android:id="@+id/picture_over_scan_hposition"
                android:max="200"
                style="@style/adc_seekbar" />

            <TextView
                android:id="@+id/picture_over_scan_hposition_text"
                style="@style/item_title"
               android:layout_width="@dimen/dp_35"
                android:layout_height="wrap_content"
                android:text="50" />
        </LinearLayout>



        <LinearLayout
            android:id="@+id/ll_picture_over_scan_vsize"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_marginLeft="@dimen/dp_10"

                style="@style/item_title"
                android:layout_width="@dimen/dp_80"
                android:layout_height="wrap_content"
                android:text="V Size  " />

            <SeekBar
                android:id="@+id/picture_over_scan_vsize"
                style="@style/adc_seekbar"
                android:max="200" />

            <TextView

                android:id="@+id/picture_over_scan_vsize_text"
                style="@style/item_title"
               android:layout_width="@dimen/dp_35"
                android:layout_height="wrap_content"
                android:text="50" />
        </LinearLayout>



        <LinearLayout
            android:id="@+id/ll_picture_over_scan_vposition"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_marginLeft="@dimen/dp_10"
                style="@style/item_title"
                android:layout_width="@dimen/dp_80"
                android:layout_height="wrap_content"
                android:text="V Position  " />

            <SeekBar
                android:id="@+id/picture_over_scan_vposition"
                style="@style/adc_seekbar"
                android:max="200" />

            <TextView
                android:id="@+id/picture_over_scan_vposition_text"
                style="@style/item_title"
               android:layout_width="@dimen/dp_35"
                android:layout_height="wrap_content"
                android:text="50" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>