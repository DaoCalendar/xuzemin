<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/picture_wb_detail_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:viewBindingIgnore="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center"
            >

            <Button
                android:id="@+id/picture_wb_normal"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_29"
                android:background="@color/colorUnFocus"
                android:text="Normal"
                android:textColor="#ffffffff"
                android:textSize="@dimen/sp_12"  />

            <Button
                android:id="@+id/picture_wb_warm"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_29"
                android:layout_marginLeft="@dimen/dp_1"
                android:background="@color/colorUnFocus"
                android:text="Warm"
                android:textColor="#ffffffff"
                android:textSize="@dimen/sp_12"  />

            <Button
                android:id="@+id/picture_wb_cool"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_29"
                android:layout_marginLeft="@dimen/dp_1"
                android:background="@color/colorUnFocus"
                android:text="Cool"
                android:textColor="#ffffffff"
                android:textSize="@dimen/sp_12" />
            <Button
                android:id="@+id/picture_wb_eye"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_29"
                android:layout_marginLeft="@dimen/dp_1"
                android:background="@color/colorUnFocus"
                android:text="Eye+"
                android:textColor="#ffffffff"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_picture_wb_rgain"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/item_title"
                android:layout_width="@dimen/dp_61"
                android:layout_height="wrap_content"
                android:text="R Gain" />

            <SeekBar
                android:id="@+id/picture_wb_rgain"
                style="@style/adc_seekbar"
                android:max="4095" />

            <TextView
                android:id="@+id/picture_wb_rgain_text"
                style="@style/wb_item_title"
                android:layout_width="@dimen/dp_35"
                android:layout_height="wrap_content"
                android:text="50" />
        </LinearLayout>




        <LinearLayout
            android:id="@+id/ll_picture_wb_ggain"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView

                android:id="@+id/picture_adc_ggain"
                style="@style/item_title"
                android:layout_width="@dimen/dp_61"
                android:layout_height="wrap_content"
                android:text="G Gain" />

            <SeekBar
                android:id="@+id/picture_wb_ggain"
                style="@style/adc_seekbar"
                android:max="4095" />

            <TextView
                android:id="@+id/picture_wb_ggain_text"
                style="@style/wb_item_title"
                android:layout_width="@dimen/dp_35"
                android:layout_height="wrap_content"
                android:text="50" />
        </LinearLayout>



        <LinearLayout
            android:id="@+id/ll_picture_wb_bgain"

            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView

                android:id="@+id/picture_adc_bgain"
                style="@style/item_title"
                android:layout_width="@dimen/dp_61"
                android:layout_height="wrap_content"
                android:text="B Gain" />

            <SeekBar
                android:id="@+id/picture_wb_bgain"
                style="@style/adc_seekbar"
                android:max="4095" />

            <TextView

                android:id="@+id/picture_wb_bgain_text"
                style="@style/wb_item_title"
                android:layout_width="@dimen/dp_35"
                android:layout_height="wrap_content"
                android:text="50" />
        </LinearLayout>



        <LinearLayout
            android:id="@+id/ll_picture_wb_roffset"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView

                android:id="@+id/picture_adc_r_offSet"
                style="@style/item_title"
                android:layout_width="@dimen/dp_61"
                android:layout_height="wrap_content"
                android:text="R OffSet" />

            <SeekBar
                android:id="@+id/picture_wb_roffset"
                android:max="4095"
                style="@style/adc_seekbar" />

            <TextView


                android:id="@+id/picture_wb_roffset_text"
                style="@style/wb_item_title"
                android:layout_width="@dimen/dp_35"
                android:layout_height="wrap_content"
                android:text="50" />
        </LinearLayout>



        <LinearLayout
            android:id="@+id/ll_picture_wb_goffset"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView


                android:id="@+id/picture_adc_g_offSet"
                style="@style/item_title"
                android:layout_width="@dimen/dp_61"
                android:layout_height="wrap_content"
                android:text="G OffSet" />

            <SeekBar
                android:id="@+id/picture_wb_goffset"
                style="@style/adc_seekbar"
                android:max="4095" />

            <TextView
                android:id="@+id/picture_wb_goffset_text"
                style="@style/wb_item_title"
                android:layout_width="@dimen/dp_35"
                android:layout_height="wrap_content"
                android:text="50" />
        </LinearLayout>



        <LinearLayout
            android:id="@+id/ll_picture_wb_boffset"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/item_title"
                android:layout_width="@dimen/dp_61"
                android:layout_height="wrap_content"
                android:text="B OffSet" />

            <SeekBar
                android:id="@+id/picture_wb_boffset"
                style="@style/adc_seekbar"
                android:max="4095" />

            <TextView
                android:id="@+id/picture_wb_boffset_text"
                style="@style/wb_item_title"
                android:layout_width="@dimen/dp_35"
                android:layout_height="wrap_content"
                android:text="50" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>