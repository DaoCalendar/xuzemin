                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="EQ3" />

            <SeekBar
                android:id="@+id/sound_mode_eq3"
                android:max="100"
                style="@style/adc_seekbar" />

            <TextView

                android:id="@+id/sound_mode_eq3_text"
                style="@style/item_title"
                android:layout_width="@dimen/dp_35"
                android:layout_height="wrap_content"
                android:text="50" />
        </LinearLayout>

        <LinearLayout style="@style/item_detail"
            android:id="@+id/ll_sound_mode_eq4"
            >

            <TextView
                android:layout_marginLeft="@dimen/dp_20"
                style="@style/item_title"
                android:layout_width="@dimen/dp_44"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="EQ4" />

            <SeekBar
                android:id="@+id/sound_mode_eq4"
                style="@style/adc_seekbar"
                android:max="100" />

            <TextView
                android:id="@+id/sound_mode_eq4_text"
                style="@style/item_title"
                android:layout_width="@dimen/dp_35"
                android:layout_height="wrap_content"
                android:text="50" />
        </LinearLayout>




        <LinearLayout style="@style/item_detail"
            android:id="@+id/ll_sound_mode_eq5"
            >

            <TextView
                android:layout_marginLeft="@dimen/dp_20"
                style="@style/item_title"
                android:layout_width="@dimen/dp_44"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="EQ5" />

            <SeekBar
                android:id="@+id/sound_mode_eq5"
                style="@style/adc_seekbar"
                android:max="100" />
            <TextView

                android:id="@+id/sound_mode_eq5_text"
                style="@style/item_title"
                android:layout_width="@dimen/dp_35"
                android:layout_height="wrap_content"
                android:text="50" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>