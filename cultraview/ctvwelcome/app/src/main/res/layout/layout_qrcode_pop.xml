<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/act_qrcode_cotainer_llt"
    android:visibility="visible"
    android:layout_width="196dp"
    android:layout_height="209dp"
    android:layout_centerInParent="true">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/act_code_pic_rlt"
        android:background="@drawable/code_bg"
        android:visibility="visible"
        android:layout_width="196dp"
        android:layout_height="209dp">

        <ImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/act_code_pic_iv"
            android:layout_width="126dp"
            android:layout_height="126dp"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="20dp" />

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="32dp">

            <TextView
                android:textSize="15sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/act_code_pic_tv"
                android:layout_width="wrap_content"
                android:layout_height="42.667dp"
                android:text="@string/code_text" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:src="@drawable/smile" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/act_ea_qrcode_iv"
        android:visibility="gone"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/qr_code"
        android:layout_below="@+id/act_code_pic_rlt"
        android:layout_alignParentRight="true" />
</LinearLayout>
