<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="236dp"
    android:layout_height="143dp">

    <RelativeLayout
        android:background="@drawable/save_edit_bg"
        android:layout_width="236dp"
        android:layout_height="143dp">

        <TextView
            android:textSize="14sp"
            android:textColor="@color/save_edit_text"
            android:gravity="center"
            android:id="@+id/save_edit_title"
            android:layout_width="236dp"
            android:layout_height="30dp"
            android:text="@string/save1" />

        <View
            android:id="@+id/view_save_edit_divider"
            android:background="@drawable/save_edit_divder"
            android:layout_width="180dp"
            android:layout_height="1px"
            android:layout_marginLeft="23dp"
            android:layout_below="@+id/save_edit_title" />

        <TextView
            android:textSize="13sp"
            android:textColor="@color/save_edit_text"
            android:id="@+id/txt_input_save_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="15dp"
            android:text="@string/input_save_file_name"
            android:layout_below="@+id/view_save_edit_divider" />

        <EditText
            android:textSize="13sp"
            android:textColor="@color/save_edit_text"
            android:gravity="center_vertical"
            android:id="@+id/et_input_save_name"
            android:background="@drawable/save_edit_input"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="68dp"
            android:layout_alignLeft="@+id/txt_input_save_name"
            android:layout_alignParentTop="true"
            android:imeOptions="flagNoExtractUi" />

        <TextView
            android:textSize="13sp"
            android:textColor="@color/selector_save_edit_confirm_text"
            android:gravity="center"
            android:id="@+id/txt_save_edit_confirm"
            android:background="@drawable/selector_save_edit_confirm_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="138dp"
            android:layout_marginTop="12dp"
            android:text="@string/confirm"
            android:layout_below="@+id/et_input_save_name" />

        <TextView
            android:textSize="13sp"
            android:textColor="@color/selector_save_edit_confirm_text"
            android:gravity="center"
            android:id="@+id/txt_save_edit_cancel"
            android:background="@drawable/selector_save_edit_confirm_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="12dp"
            android:text="@string/cancel"
            android:layout_toRightOf="@+id/txt_save_edit_confirm"
            android:layout_below="@+id/et_input_save_name" />
    </RelativeLayout>
</RelativeLayout>
