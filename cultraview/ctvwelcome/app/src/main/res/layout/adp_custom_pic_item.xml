<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:id="@+id/adp_custom_pic_container_rlt"
    android:layout_width="@dimen/content_item_width"
    android:layout_height="@dimen/content_item_height">

    <TextView
        android:id="@+id/adp_custom_icon_tv"
        android:background="@drawable/index_item_custom_selector"
        android:layout_width="@dimen/content_item_width"
        android:layout_height="96dp"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/adp_custom_back_icon_iv"
        android:paddingTop="10dp"
        android:layout_width="112dp"
        android:layout_height="85dp"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/adp_custom_font_icon_iv"
        android:paddingTop="23dp"
        android:paddingRight="15dp"
        android:layout_width="112dp"
        android:layout_height="85dp"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true" />

    <TextView
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:id="@+id/adp_custom_name_tv"
        android:layout_width="@dimen/content_item_width"
        android:layout_height="18dp"
        android:layout_below="@+id/adp_custom_icon_tv" />
</RelativeLayout>
