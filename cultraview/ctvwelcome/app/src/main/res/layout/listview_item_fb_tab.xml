<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:background="@drawable/selector_pop_window_confirm"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <RelativeLayout
            android:gravity="center"
            android:id="@+id/relative_storage_type"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp">

            <ImageView
                android:id="@+id/adp_fb_tab_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <TextView
            android:textSize="13sp"
            android:textColor="@color/selector_storage_type_text"
            android:id="@+id/txt_storeage_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@+id/relative_storage_type"
            android:layout_centerVertical="true" />
    </RelativeLayout>
</RelativeLayout>
