<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/save_edit_bg"
    android:layout_width="236dp"
    android:layout_height="112dp">

    <TextView
        android:textSize="14sp"
        android:textColor="@color/save_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/saving"
        android:layout_centerHorizontal="true" />

    <SeekBar
        android:id="@+id/seek_saving_edit_pic"
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:maxHeight="6dp"
        android:max="100"
        android:progress="50"
        android:progressDrawable="@drawable/layer_saving_edit_pic_progress"
        android:minHeight="6dp"
        android:thumb="@drawable/saving_edit_pic_thumb"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
