<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="215dp"
    android:layout_height="113dp">

    <RelativeLayout
        android:orientation="vertical"
        android:background="@drawable/save_signature_bg"
        android:layout_width="215dp"
        android:layout_height="113dp">

        <TextView
            android:textSize="14sp"
            android:textColor="@color/save_edit_text"
            android:gravity="center"
            android:id="@+id/txt_save_signature_hint"
            android:layout_width="215dp"
            android:layout_height="30dp"
            android:text="@string/hint" />

        <View
            android:id="@+id/view_save_signature_divider"
            android:background="@drawable/save_signature_divider"
            android:layout_width="180dp"
            android:layout_height="1px"
            android:layout_below="@+id/txt_save_signature_hint"
            android:layout_centerHorizontal="true" />

        <TextView
            android:textSize="13sp"
            android:textColor="@color/save_edit_text"
            android:id="@+id/txt_save_signature_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:maxWidth="180dp"
            android:text="@string/image_no_save"
            android:layout_below="@+id/view_save_signature_divider"
            android:layout_centerHorizontal="true" />

        <TextView
            android:textSize="13sp"
            android:textColor="@color/selector_save_edit_confirm_text"
            android:gravity="center"
            android:id="@+id/txt_save_signature_no"
            android:background="@drawable/selector_save_edit_confirm_bg"
            android:layout_width="33dp"
            android:layout_height="17dp"
            android:layout_marginLeft="116dp"
            android:layout_marginTop="75dp"
            android:text="@string/no"
            android:layout_alignParentTop="true" />

        <TextView
            android:textSize="13sp"
            android:textColor="@color/selector_save_edit_confirm_text"
            android:gravity="center"
            android:id="@+id/txt_save_signature_yes"
            android:background="@drawable/selector_save_edit_confirm_bg"
            android:layout_width="33dp"
            android:layout_height="17dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="75dp"
            android:text="@string/yes"
            android:layout_toRightOf="@+id/txt_save_signature_no"
            android:layout_alignParentTop="true" />
    </RelativeLayout>
</RelativeLayout>
