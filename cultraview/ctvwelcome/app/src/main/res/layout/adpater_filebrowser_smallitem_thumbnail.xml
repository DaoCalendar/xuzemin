<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="180dp"
    android:layout_height="40dp">

    <RelativeLayout
        android:gravity="center"
        android:layout_width="180dp"
        android:layout_height="40dp">

        <RelativeLayout
            android:gravity="center_vertical"
            android:id="@+id/relative_file_type_bg"
            android:background="@drawable/selector_smallthumb_bg"
            android:layout_width="150dp"
            android:layout_height="30dp">

            <ImageView
                android:id="@+id/adp_fb_image_thumbnail"
                android:layout_width="30dp"
                android:layout_height="19dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/folder_small_icon"
                android:scaleType="centerInside" />

            <TextView
                android:textSize="13sp"
                android:textColor="@color/add_module_time"
                android:ellipsize="marquee"
                android:gravity="center_vertical"
                android:id="@+id/adp_fb_filename_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="19dp"
                android:layout_marginLeft="8dp"
                android:text="123"
                android:singleLine="true"
                android:layout_toRightOf="@+id/adp_fb_image_thumbnail" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
