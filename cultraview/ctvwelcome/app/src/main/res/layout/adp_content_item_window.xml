<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/adp_content_container_rlt"
    android:layout_width="@dimen/content_item_width_window"
    android:layout_height="@dimen/content_item_height_window">

    <TextView
        android:id="@+id/adp_content_icon_tv"
        android:background="@drawable/index_item_custom_selector"
        android:visibility="visible"
        android:layout_width="@dimen/content_icon_bg_width_window"
        android:layout_height="@dimen/content_icon_bg_height_window"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/adp_content_icon_iv"
        android:layout_width="@dimen/content_icon_width_window"
        android:layout_height="@dimen/content_icon_height_window"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true" />

    <TextView
        android:textSize="@dimen/content_text_size_window"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:id="@+id/adp_content_name_tv"
        android:layout_width="@dimen/content_text_width_window"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/content_text_top_window"
        android:singleLine="true"
        android:layout_below="@+id/adp_content_icon_iv"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
