<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/root_right_menu"
                android:layout_width="@dimen/right_menu_container_width"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="0dp"
                android:layout_margin="0dp">
    <!--android:background="@drawable/btn_menu_bg_shape">-->

    <!-- 箭头按钮 -->
    <RelativeLayout
        android:id="@+id/rl_btn_arrow"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:padding="0dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/btn_arrow"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_centerInParent="true"
            android:src="@drawable/btn_arrow_left_normal" />
    </RelativeLayout>

    <!-- 菜单按钮项 -->
    <LinearLayout
        android:id="@+id/menu_layout"
        android:layout_below="@+id/rl_btn_arrow"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="1dp"
        android:padding="0dp">

        <RelativeLayout
            android:id="@+id/rl_btn_back"
            style="@style/menu_control_btn">
            <ImageView
                android:id="@+id/btn_back"
                style="@style/btn_menu_image"
                android:src="@drawable/btn_back_normal"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_btn_home"
            style="@style/menu_control_btn">
            <ImageView
                android:id="@+id/btn_home"
                style="@style/btn_menu_image"
                android:src="@drawable/btn_home_normal"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_btn_app_switch"
            style="@style/menu_control_btn">
            <ImageView
                android:id="@+id/btn_app_switch"
                style="@style/btn_menu_image"
                android:src="@drawable/btn_app_switch_normal"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_btn_show_setting"
            style="@style/menu_control_btn">
            <ImageView
                android:id="@+id/btn_show_setting"
                style="@style/btn_menu_image"
                android:src="@drawable/btn_setting_normal"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_btn_whiteboard"
            style="@style/menu_control_btn">
            <ImageView
                android:id="@+id/btn_whiteboard"
                style="@style/btn_menu_image"
                android:src="@drawable/btn_pan_normal"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_btn_user_defined"
            style="@style/menu_control_btn">
            <ImageView
                android:id="@+id/btn_user_defined"
                style="@style/btn_menu_image"
                android:src="@drawable/btn_user_defined_normal"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_btn_user_pc"
            style="@style/menu_control_btn">
            <ImageView
                android:id="@+id/btn_user_pc"
                style="@style/btn_menu_image"
                android:src="@drawable/btn_user_defined_normal"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>

