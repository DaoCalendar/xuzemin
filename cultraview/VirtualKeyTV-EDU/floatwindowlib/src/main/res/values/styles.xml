<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppThemeDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppThemeDialogRight" parent="AppThemeDialog">
        <item name="android:windowAnimationStyle">@style/AnimationActivityRight</item>
    </style>
    <style name="AppThemeDialogLeft" parent="AppThemeDialog">
        <item name="android:windowAnimationStyle">@style/AnimationActivityLeft</item>
    </style>

    <style name="AnimationActivity" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/popshow_anim</item>
        <item name="android:activityOpenExitAnimation">@anim/pophide_anim</item>
        <item name="android:activityCloseEnterAnimation">@anim/popshow_anim</item>
        <item name="android:activityCloseExitAnimation">@anim/pophide_anim</item>
    </style>

    <style name="AnimationActivityRight" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/in_form_right_anim</item>
        <item name="android:activityOpenExitAnimation">@anim/out_to_right_anim</item>
        <item name="android:activityCloseEnterAnimation">@anim/in_form_right_anim</item>
        <item name="android:activityCloseExitAnimation">@anim/out_to_right_anim</item>
    </style>

    <style name="AnimationActivityLeft" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/in_form_left_anim</item>
        <item name="android:activityOpenExitAnimation">@anim/out_to_left_anim</item>
        <item name="android:activityCloseEnterAnimation">@anim/in_form_left_anim</item>
        <item name="android:activityCloseExitAnimation">@anim/out_to_left_anim</item>
    </style>

    <style name="MyDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item> 设置dialog的背景，此处为系统给定的透明值
        <item name="android:windowFrame">@null</item>                Dialog的windowFrame框为无
        <item name="android:windowNoTitle">true</item>　　　　　　　　 是否显示标题
        <item name="android:windowIsFloating">true</item>            是否浮现在activity之上
        <item name="android:windowIsTranslucent">true</item>         是否半透明
        <item name="android:windowContentOverlay">@null</item>       是否有覆盖
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>   设置Activity出现方式
        <item name="android:backgroundDimEnabled">true</item>        背景是否模糊显示
    </style>

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">5sp</item>
        <item name="android:textColor">@color/c1olorAAA</item>
    </style>
    
    <style name="MyTabLayout" parent="Widget.Design.TabLayout" >
        <item name="tabPaddingStart">0dp</item>
        <item name="tabPaddingEnd">0dp</item>
    </style>

</resources>
