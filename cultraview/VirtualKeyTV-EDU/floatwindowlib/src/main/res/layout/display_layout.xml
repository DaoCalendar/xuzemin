<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridView
        android:id="@+id/grid_view"
        android:layout_width="500dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_25"
        android:background="@drawable/main_selected_bg"
        android:columnWidth="80dp"
        android:numColumns="4"
        android:padding="0dp"
        android:stretchMode="spacingWidthUniform"></GridView>

    <!-- 亮度 -->
    <LinearLayout
        android:id="@+id/ll_user_set"
        android:layout_width="500dp"
        android:layout_height="200dp"
        android:layout_below="@id/grid_view"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:padding="0dp"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/rl_setting_light"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/brightness_title"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_weight="0.7"
                android:gravity="center"
                android:text="@string/display_brightness"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12" />


            <SeekBar
                android:id="@+id/brightness_seekBar"
                style="@style/seek_bar" />

            <TextView
                android:id="@+id/brightness_num"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="@string/display_sharpness"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/contrast_title"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_weight="0.7"
                android:gravity="center"
                android:text="@string/display_contrast"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12" />


            <SeekBar
                android:id="@+id/contrast_seekBar"
                style="@style/seek_bar" />

            <TextView
                android:id="@+id/contrast_num"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="@string/display_sharpness"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/hue_title"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_weight="0.7"
                android:gravity="center"
                android:text="@string/display_hue"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12" />


            <SeekBar
                android:id="@+id/hue_seekBar"
                style="@style/seek_bar" />

            <TextView
                android:id="@+id/hue_num"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="@string/display_sharpness"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sharpness_title"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"

                android:layout_marginLeft="15dp"
                android:layout_weight="0.7"
                android:gravity="center"
                android:text="@string/display_sharpness"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12" />


            <SeekBar
                android:id="@+id/sharpness_seekBar"
                style="@style/seek_bar" />

            <TextView
                android:id="@+id/sharpness_num"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:layout_weight="0.3"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>