<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridView
        android:id="@+id/grid_view"
        android:layout_width="500dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_25"
        android:background="@drawable/main_selected_bg"
        android:columnWidth="80dp"
        android:numColumns="4"
        android:padding="0dp"
        android:stretchMode="spacingWidthUniform">

    </GridView>

    <!-- 亮度 -->
    <LinearLayout
        android:id="@+id/ll_user_set"
        android:layout_width="500dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginBottom="28dp"
        android:orientation="vertical"
        android:padding="0dp"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/rl_setting_light"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bass_title"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="@string/voice_bass"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12" />

            <SeekBar
                android:id="@+id/bass_seekBar"
                android:splitTrack="false"
                style="@style/seek_bar" />

            <TextView
                android:id="@+id/bass_num"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="@string/voice_bass"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/treble_title"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="@string/voice_treble"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12" />

            <SeekBar
                android:id="@+id/treble_seekBar"
                android:splitTrack="false"
                style="@style/seek_bar" />

            <TextView
                android:id="@+id/treble_num"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="@string/voice_treble"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/balance_title"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="@string/voice_balance"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12" />

            <SeekBar
                android:id="@+id/balance_seekBar"
                android:splitTrack="false"
                style="@style/seek_bar" />

            <TextView
                android:id="@+id/balance_num"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="@string/voice_balance"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12" />


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>