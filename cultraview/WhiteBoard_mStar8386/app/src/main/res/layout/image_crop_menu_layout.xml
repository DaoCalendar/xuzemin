<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/lib_crop_menu_root"
              android:layout_width="@dimen/crop_menu_width"
              android:layout_height="@dimen/crop_menu_height"
              android:background="#90000000"
              android:gravity="center"
              android:orientation="horizontal">

    <TextView
        android:id="@+id/lib_image_crop_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/image_crop_cancel"
        android:textColor="@drawable/image_menu_color"
        android:textSize="@dimen/text_size_16"/>

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dlg_btn_margin"
        android:layout_marginRight="@dimen/dlg_btn_margin"
        android:background="#60ffffff"/>

    <TextView
        android:id="@+id/lib_image_crop_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/image_crop_ok"
        android:textColor="@drawable/image_menu_color"
        android:textSize="@dimen/text_size_16"/>
</LinearLayout>
