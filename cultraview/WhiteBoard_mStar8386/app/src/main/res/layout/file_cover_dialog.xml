<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/root"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/bg_filecover_dialog"
              android:gravity="center"
              android:orientation="vertical"
              android:padding="@dimen/icon_padding">

    <TextView
        android:id="@+id/text_file_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30px"
        android:layout_marginTop="30px"
        android:gravity="right|center_vertical"
        android:paddingRight="15px"
        android:text="@string/file_already_exist"
        android:textColor="#f0f0f0"
        android:textSize="@dimen/dlg_msg_textsize"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10px"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1.0"
            android:background="@drawable/update_btn_selector"
            android:paddingBottom="10px"
            android:paddingTop="10px"
            android:text="@string/no"
            android:textColor="#ffffffff"
            android:textSize="@dimen/dlg_btn_textsize"/>

        <Button
            android:id="@+id/button_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1.0"
            android:background="@drawable/update_btn_selector"
            android:paddingBottom="10px"
            android:paddingTop="10px"
            android:text="@string/yes"
            android:textColor="#ffffffff"
            android:textSize="@dimen/dlg_btn_textsize"/>
    </LinearLayout>
</LinearLayout>
