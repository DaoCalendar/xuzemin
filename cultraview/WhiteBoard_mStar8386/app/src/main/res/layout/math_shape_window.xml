<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/pen_option_bg"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y160"
        android:layout_marginRight="@dimen/x15"
        android:layout_marginLeft="@dimen/x15">


        <LinearLayout
            android:id="@+id/layout_shape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y10"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_shape_circle"
                android:layout_width="@dimen/y65"
                android:layout_height="@dimen/y65"
                android:layout_marginRight="@dimen/x5"
                android:src="@drawable/circle" />

            <ImageView
                android:id="@+id/iv_shape_oval"
                android:layout_width="@dimen/y65"
                android:layout_height="@dimen/y65"
                android:layout_marginLeft="@dimen/x5"
                android:layout_marginRight="@dimen/x5"
                android:src="@drawable/oval" />

            <ImageView
                android:id="@+id/iv_shape_rect"
                android:layout_width="@dimen/y65"
                android:layout_height="@dimen/y65"
                android:layout_marginLeft="@dimen/x5"
                android:layout_marginRight="@dimen/x5"
                android:src="@drawable/square" />

            <ImageView
                android:id="@+id/iv_shape_cylinder"
                android:layout_width="@dimen/y65"
                android:layout_height="@dimen/y65"
                android:layout_marginLeft="@dimen/x5"
                android:src="@drawable/cylinder"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_shape_color"
            android:layout_below="@+id/layout_shape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y10"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_shape_equal_tri"
                android:layout_width="@dimen/y65"
                android:layout_height="@dimen/y65"
                android:layout_marginRight="@dimen/x5"
                android:src="@drawable/equal_tri" />

            <ImageView
                android:id="@+id/iv_shape_right_tri"
                android:layout_width="@dimen/y65"
                android:layout_height="@dimen/y65"
                android:layout_marginLeft="@dimen/x5"
                android:layout_marginRight="@dimen/x5"
                android:src="@drawable/right_tri" />


            <ImageView
                android:id="@+id/iv_shape_arrow"
                android:layout_width="@dimen/y65"
                android:layout_height="@dimen/y65"
                android:layout_marginLeft="@dimen/x5"
                android:layout_marginRight="@dimen/x5"
                android:visibility="visible"
                android:src="@drawable/arrow" />

            <ImageView
                android:id="@+id/iv_shape_line"
                android:layout_width="@dimen/y65"
                android:layout_height="@dimen/y65"
                android:layout_marginLeft="@dimen/x5"
                android:src="@drawable/line" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>