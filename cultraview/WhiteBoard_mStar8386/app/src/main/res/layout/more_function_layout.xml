<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_row="2"
    android:background="@drawable/bg_more_function_layout"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/more_item_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10sp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/save_board"
                android:layout_width="@dimen/more_icon_size"
                android:layout_height="@dimen/more_icon_size"
                android:background="@drawable/save"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/save"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:textColor="@color/more_item_text_color"
                android:textSize="@dimen/more_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/more_item_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="10sp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/insert_image"
                android:layout_width="@dimen/more_icon_size"
                android:layout_height="@dimen/more_icon_size"
                android:background="@drawable/insert_image"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/insert_image"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:textColor="@color/more_item_text_color"
                android:textSize="@dimen/more_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/more_item_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/share_qr"
                android:layout_width="@dimen/more_icon_size"
                android:layout_height="@dimen/more_icon_size"
                android:background="@drawable/qr_share"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/qr_share"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:textColor="@color/more_item_text_color"
                android:textSize="@dimen/more_text_size" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/more_item_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10sp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/save_picture"
                android:layout_width="@dimen/more_icon_size"
                android:layout_height="@dimen/more_icon_size"
                android:background="@drawable/picture"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/save_pt"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:textColor="@color/more_item_text_color"
                android:textSize="@dimen/more_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/more_item_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginRight="10sp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/note_open"
                android:layout_width="@dimen/more_icon_size"
                android:layout_height="@dimen/more_icon_size"
                android:layout_gravity="center"
                android:background="@drawable/note_open" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/open_file"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:textColor="@color/more_item_text_color"
                android:textSize="@dimen/more_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/more_item_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/mail_to"
                android:layout_width="@dimen/more_icon_size"
                android:layout_height="@dimen/more_icon_size"
                android:background="@drawable/mail_to"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/send_by_email"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:textColor="@color/more_item_text_color"
                android:textSize="@dimen/more_text_size" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/more_item_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginRight="10sp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/save_pdf"
                android:layout_width="@dimen/more_icon_size"
                android:layout_height="@dimen/more_icon_size"
                android:background="@drawable/pdf"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/save_pdf"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:textColor="@color/more_item_text_color"
                android:textSize="@dimen/more_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/more_item_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="10sp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/setting"
                android:layout_width="@dimen/more_icon_size"
                android:layout_height="@dimen/more_icon_size"
                android:background="@drawable/setting"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/setting"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:textColor="@color/more_item_text_color"
                android:textSize="@dimen/more_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/more_item_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/exit_app"
                android:layout_width="@dimen/more_icon_size"
                android:layout_height="@dimen/more_icon_size"
                android:layout_gravity="center"
                android:background="@drawable/exit" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/exit"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:textColor="@color/more_item_text_color"
                android:textSize="@dimen/more_text_size" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>