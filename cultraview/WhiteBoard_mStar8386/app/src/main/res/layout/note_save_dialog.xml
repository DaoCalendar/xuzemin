<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/root"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/bg_update_dialog"
              android:gravity="center"
              android:orientation="vertical"
              android:padding="@dimen/icon_padding">

    <TextView
        android:id="@+id/text_file_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/x100"
        android:gravity="right|center_vertical"
        android:paddingRight="@dimen/x15"
        android:text="@string/not_saved"
        android:textColor="#f0f0f0"
        android:textSize="@dimen/dlg_msg_textsize"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x10"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_no"
            android:layout_width="0dp"
            android:layout_height="@dimen/x60"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginRight="@dimen/x15"
            android:layout_weight="1"
            android:background="@drawable/update_btn_selector"
            android:paddingBottom="@dimen/x10"
            android:paddingTop="@dimen/x10"
            android:text="@string/refuse_save"
            android:visibility="visible"
            android:textColor="#ffffffff"
            android:textSize="@dimen/dlg_btn_textsize"/>

        <Button
            android:id="@+id/button_yes"
            android:layout_width="0dp"
            android:layout_height="@dimen/x60"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginRight="@dimen/x15"
            android:layout_weight="1"
            android:background="@drawable/update_btn_selector"
            android:paddingBottom="@dimen/x10"
            android:paddingTop="@dimen/x10"
            android:text="@string/save"
            android:textColor="#ffffffff"
            android:textSize="@dimen/dlg_btn_textsize"/>
    </LinearLayout>
</LinearLayout>
