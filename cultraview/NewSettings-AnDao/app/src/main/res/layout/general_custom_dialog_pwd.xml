<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pwd_ly"
        android:layout_width="680dip"
        android:layout_height="408dip"
        android:layout_gravity="center"
        android:orientation="vertical"
        >

    <TextView
            android:id="@+id/tv_theme_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/greneral_top_margin"
            android:text="@string/greneral_set_password"
            android:textColor="@color/white"
            android:textSize="@dimen/greneral_title_sp" />

    <LinearLayout
            android:id="@+id/old_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/greneral_top_margin"
            android:layout_marginLeft="@dimen/greneral_item_left_margin"
            android:orientation="horizontal" >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/greneral_enter_the_old_password"
                android:textColor="@color/white"
                android:textSize="@dimen/greneral_content_sp" />
        <EditText
                android:id="@+id/et_old_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_marginLeft="20dip"
                android:inputType="number"
                android:password="true"
                android:digits="1234567890"
                android:maxLength="6"
                android:singleLine="true"
                android:textColor="@color/half_white"
                android:textSize="@dimen/greneral_content_sp"
                android:textColorHighlight="@color/edit_select"
                android:textCursorDrawable="@drawable/greneral_cursor" />
    </LinearLayout>

    <View
            android:id="@+id/old_view"
            android:layout_width="@dimen/greneral_list_width"
            android:layout_height="1px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dip"
            android:background="@mipmap/greneral_list_divider" />

    <LinearLayout
            android:id="@+id/first_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/greneral_top_margin"
            android:layout_marginLeft="@dimen/greneral_item_left_margin"
            android:orientation="horizontal" >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/greneral_please_input_passwords"
                android:textColor="@color/white"
                android:textSize="@dimen/greneral_content_sp" />
        <EditText
                android:id="@+id/et_first_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:background="@null"
                android:inputType="number"
                android:password="true"
                android:digits="1234567890"
                android:maxLength="6"
                android:textColor="@color/white"
                android:textSize="@dimen/greneral_content_sp"
                />
    </LinearLayout>

    <View
            android:layout_width="@dimen/greneral_list_width"
            android:layout_height="1px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dip"
            android:background="@mipmap/greneral_list_divider" />

    <LinearLayout
            android:id="@+id/second_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/greneral_top_margin"
            android:layout_marginLeft="@dimen/greneral_item_left_margin"
            android:orientation="horizontal" >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/greneral_please_input_passwords_again"
                android:textColor="@color/white"
                android:textSize="@dimen/greneral_content_sp" />
        <EditText
                android:id="@+id/et_sec_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:background="@null"
                android:inputType="number"
                android:password="true"
                android:digits="1234567890"
                android:maxLength="6"
                android:textColor="@color/white"
                android:textSize="@dimen/greneral_content_sp"
                />
    </LinearLayout>

    <View
            android:layout_width="@dimen/greneral_list_width"
            android:layout_height="1px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dip"
            android:background="@mipmap/greneral_list_divider" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/greneral_top_margin"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

        <Button
                android:id="@+id/pwd_save"
                android:layout_width="100dip"
                android:layout_height="29.3dip"
                android:textAllCaps="false"
                android:text="@string/greneral_save"
                android:background="@drawable/selector_btn_bg"
                android:textColor="@drawable/item_text_color_dialog"
                android:textSize="20sp" />

        <Button
                android:id="@+id/pwd_cancel"
                android:layout_width="100dip"
                android:layout_height="29.3dip"
                android:textAllCaps="false"
                android:layout_marginLeft="150dip"
                android:gravity="center"
                android:text="@android:string/cancel"
                android:background="@drawable/selector_btn_bg"
                android:textColor="@drawable/item_text_color_dialog"
                android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>