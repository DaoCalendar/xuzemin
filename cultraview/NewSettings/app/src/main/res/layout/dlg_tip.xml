<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

    <TextView
            android:layout_marginTop="50dp"
            android:id="@+id/tv_dlg_tip_title"
            android:layout_width="440dp"
            android:layout_height="180dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textSize="22sp" />

    <Button
            android:id="@+id/click_ok"
            android:layout_width="174.7dip"
            android:layout_height="46.7dip"
            android:layout_gravity="bottom"
            android:layout_marginBottom="150dip"
            android:layout_marginLeft="60dip"
            android:textAllCaps="false"
            android:background="@drawable/selector_btn_bg"
            android:text="@android:string/ok"
            android:textColor="@color/selector_color_btn"
            android:textSize="22sp" />

    <Button
            android:id="@+id/click_no"
            android:layout_width="174.7dip"
            android:layout_height="46.7dip"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="150dip"
            android:layout_marginRight="60dip"
            android:textAllCaps="false"
            android:background="@drawable/selector_btn_bg"
            android:text="@android:string/no"
            android:textColor="@color/selector_color_btn"
            android:textSize="22sp" />
</FrameLayout>