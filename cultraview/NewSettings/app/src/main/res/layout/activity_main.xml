<?xml version="1.0" encoding="utf-8"?>
<!--<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:padding="0dp">-->

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/scrollview"
        android:layout_width="@dimen/ll_main_width_size"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_gravity="center_horizontal"
        android:padding="0dp">

        <LinearLayout
            android:layout_width="@dimen/ll_main_width_size"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="0dp"
            android:orientation="vertical"
            android:padding="0dp">
            <!-- 设备 -->
            <include
                layout="@layout/device_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/module_height_item_x4"
                android:layout_margin="0dp"
                android:padding="0dp" />

            <View style="@style/divider_line_style" />

            <!-- 网络 -->
            <include
                layout="@layout/net_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/module_height_item_x4"
                android:layout_margin="0dp"
                android:padding="0dp" />

            <View style="@style/divider_line_style" />

            <!-- 一般设置 -->
            <include
                layout="@layout/general_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/module_height_item_x7"
                android:layout_margin="0dp"
                android:padding="0dp" />

            <View style="@style/divider_line_style" />

            <!-- 语言和输入 -->
            <include
                layout="@layout/input_language_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/module_height_item_x3"
                android:layout_margin="0dp"
                android:padding="0dp" />

            <View style="@style/divider_line_style" />
            <!-- 时间和日期 -->
            <include
                layout="@layout/time_date_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/module_height_item_x7"
                android:layout_margin="0dp"
                android:padding="0dp" />

            <View style="@style/divider_line_style" />

            <!-- 安全与隐私 -->
            <include
                layout="@layout/security_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/module_height_item_x4"
                android:layout_margin="0dp"
                android:padding="0dp" />

            <View style="@style/divider_line_style" />
            <!-- 关于设备 -->
            <include
                layout="@layout/about_device_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/module_height_item_x4"
                android:layout_margin="0dp"
                android:padding="0dp" />

            <View style="@style/divider_line_style" />
        </LinearLayout>
    </ScrollView>

