<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="@dimen/ll_main_content_width_size"
        android:layout_height="@dimen/common_item_height"
        android:layout_marginTop="@dimen/toback_top"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/back_bluetooth"
        android:focusable="true"
        android:background="@drawable/selector_item"
        >

    <ImageView
            android:id="@+id/back_btn"
            android:layout_width="@dimen/toback_top"
            android:layout_height="@dimen/toback_top"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/fab_margin"
            android:src="@mipmap/icon_back"
            android:visibility="visible" />

    <TextView
            android:id="@+id/back_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/fab_margin"
            android:gravity="center_vertical|left"
            android:text="@string/bluetooth"
            android:textColor="@color/white" />
</LinearLayout>