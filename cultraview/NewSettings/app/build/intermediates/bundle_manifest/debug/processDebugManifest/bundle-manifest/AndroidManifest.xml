            android:name="com.ctv.settings.device.DeviceNameActivity"
            android:launchMode="singleTop" />
        <activity
            android:name="com.ctv.settings.device.ThemeBgActvity"
            android:launchMode="singleTop" />
        <activity
            android:name="com.ctv.settings.device.ThemeStyleActvity"
            android:launchMode="singleTop" />

        <!-- about -->
        <activity
            android:name="com.ctv.settings.about.activity.SystemupdateItemActivity"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="com.cultraview.settings.update.SYSTEM_UPDATE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ctv.settings.about.activity.LocalUpdateActivity"
            android:clearTaskOnLaunch="true"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="com.cultraview.settings.update.LOCAL_UPDATE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ctv.settings.about.activity.SystemUpdateActivity"
            android:launchMode="singleTop" >
        </activity>
        <activity
            android:name="com.ctv.settings.about.activity.AboutActivity"
            android:launchMode="singleTop" >
        </activity>
        <activity
            android:name="com.ctv.settings.about.activity.RestoreFactoryActivity"
            android:launchMode="singleTop" >
        </activity>
        <activity
            android:name="com.ctv.settings.about.activity.BootOptionsActivity"
            android:launchMode="singleTop" />
        <activity
            android:name="com.ctv.settings.general.ShareUsbActivity"
            android:launchMode="singleTop" />

