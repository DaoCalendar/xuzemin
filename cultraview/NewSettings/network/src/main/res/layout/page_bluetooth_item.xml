<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/ll_main_content_width_size"
    android:layout_height="@dimen/common_item_height"
    android:layout_gravity="center_horizontal">

    <ImageView
        android:id="@+id/bluetooth_type_img"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:layout_marginStart="@dimen/fab_network_margin"
        android:gravity="left|center_vertical"
        />

    <TextView
        android:id="@+id/bluetooth_name_tv"
        style="@style/item_textView"
        android:textSize="@dimen/content_sp"
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/bluetooth_address_tv"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="right|center_vertical"
        android:layout_marginEnd="@dimen/margin_right"
        android:visibility="gone"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/content_sp"
        />

    <TextView
        android:id="@+id/bluetooth_connecting_tv"
        android:layout_gravity="right|center_vertical"
        style="@style/item_textView"
        android:layout_width="wrap_content"
        android:layout_marginEnd="@dimen/marginEnd"
        android:textSize="@dimen/content_sp"
        android:textColor="@color/white"
        />

</FrameLayout>