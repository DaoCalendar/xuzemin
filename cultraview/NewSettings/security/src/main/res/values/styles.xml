<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="item_textView_new">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/item_textView_margin_left</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textSize">@dimen/item_textView_textSize</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
    </style>

    <style name="switch_image_style_new">
        <item name="android:layout_width">@dimen/item_switch_image_width</item>
        <item name="android:layout_height">@dimen/item_switch_image_height</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginEnd">@dimen/marginEnd</item>
        <item name="android:background">@mipmap/on</item>
    </style>
</resources>
