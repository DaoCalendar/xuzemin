<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:orientation="vertical"
        android:padding="0dp">

    <include layout="@layout/top_back_layout" />

    <LinearLayout
            android:layout_width="@dimen/ll_main_content_width_size"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/ll_main_margin_top"
            android:orientation="vertical">
        <RelativeLayout
                android:id="@+id/rl_date"
                android:layout_height="@dimen/item_height"
                style="@style/rl_item">

            <TextView
                    style="@style/item_textView"
                    android:text="@string/item_date_title"
                    android:textColor="@color/item_text_color"
                    android:textSize="@dimen/content_sp"/>

            <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/tv_date"
                    android:text="@string/item_date"
                    android:layout_marginEnd="20dp"
                    android:textColor="@color/item_text_color"
                    android:textSize="@dimen/content_sp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    />
        </RelativeLayout>
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/list_divider"/>

        <RelativeLayout
            android:id="@+id/rl_time"
            android:layout_height="@dimen/item_height"
            style="@style/rl_item">

            <TextView
                style="@style/item_textView"
                android:text="@string/item_time_title"
                android:textColor="@color/item_text_color"
                android:textSize="@dimen/content_sp"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/tv_time"
                android:text="@string/item_time"
                android:layout_marginEnd="20dp"
                android:textColor="@color/item_text_color"
                android:textSize="@dimen/content_sp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/list_divider"/>


    </LinearLayout>


</LinearLayout>