<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <item android:state_focused="true" android:state_checked="true">
        <shape android:shape="oval">
            <stroke android:width="1dp" android:color="@color/color_1890FF"/>
            <solid android:color="@color/color_selectable_item"/>
        </shape>
    </item>
    <item android:state_focused="true" android:state_checked="false">
        <shape android:shape="oval">
            <stroke android:width="1dp" android:color="#979797"/>
            <solid android:color="@color/color_selectable_item"/>
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="oval">
            <stroke android:width="1dp" android:color="@color/color_1890FF"/>
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <stroke android:width="1dp" android:color="#979797"/>
        </shape>
    </item>
</selector>