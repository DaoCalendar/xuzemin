<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_time_date"
    android:layout_width="match_parent"
    android:layout_height="@dimen/module_height_item_x7"
    android:layout_margin="0dp"
    android:orientation="vertical"
    android:padding="0dp">

    <TextView
        style="@style/item_title_new"
        android:text="@string/header_time_date" />

    <LinearLayout
        style="@style/ll_list"
        android:layout_weight="7"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_is_24_hour_format"
            style="@style/rl_item">

            <TextView
                style="@style/item_textView_new"
                android:text="@string/item_24_hour_format" />

            <ImageView
                android:id="@+id/iv_is_24_hour_format"
                style="@style/switch_image_style"
                android:visibility="visible" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_auto_date_time"
            style="@style/rl_item">

            <TextView
                style="@style/item_textView_new"
                android:text="@string/item_automatic" />

            <ImageView
                android:id="@+id/iv_auto_date_time"
                style="@style/switch_image_style_new"
                android:visibility="visible" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_date_and_time"
            style="@style/rl_item">

            <TextView
                android:id="@+id/tv_head_date_and_time"
                style="@style/item_textView_new"
                android:text="@string/header_time_date" />

            <TextView
                android:id="@+id/tv_date_and_time"
                style="@style/item_textView_right_new"
                android:text="@string/item_date_and_time" />

            <ImageView style="@style/more_image_style" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_timezone"
            style="@style/rl_item">

            <TextView
                style="@style/item_textView_new"
                android:text="@string/item_timezone" />

            <TextView
                android:id="@+id/tv_timezone"
                style="@style/item_textView_right_new"
                android:layout_width="220dp"
                android:text="@string/right_timezone" />

            <ImageView style="@style/more_image_style" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_date_format"
            style="@style/rl_item">

            <TextView
                style="@style/item_textView_new"
                android:text="@string/item_time_format" />

            <TextView
                android:id="@+id/tv_date_format"
                style="@style/item_textView_right_new"
                android:text="@string/right_time_format" />

            <ImageView style="@style/more_image_style_new" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_turn_off"
            style="@style/rl_item">

            <TextView
                style="@style/item_textView_new"
                android:visibility="gone"
                android:text="@string/item_off" />

            <ImageView style="@style/more_image_style_new" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_turn_on"
            style="@style/rl_item">

            <TextView
                style="@style/item_textView_new"
                android:visibility="gone"

                android:text="@string/item_on" />

            <ImageView style="@style/more_image_style_new" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
