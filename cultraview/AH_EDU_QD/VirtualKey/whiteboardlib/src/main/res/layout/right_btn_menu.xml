<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_right_menu"
    android:layout_width="62px"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:orientation="vertical"
    android:padding="0dp">
    <!--android:background="@drawable/btn_menu_bg_shape">-->

    <!-- 箭头按钮 -->
    <RelativeLayout
        android:id="@+id/rl_btn_arrow"
        android:layout_width="match_parent"
        android:layout_height="54px"
        android:layout_margin="0dp"
        android:background="@drawable/shape_all"
        android:padding="0dp">

        <ImageView
            android:id="@+id/btn_arrow"
            android:layout_width="40px"
            android:layout_height="40px"
            android:layout_centerInParent="true"
            android:src="@drawable/btn_arrow_left_normal"
            android:visibility="visible" />
        <!--<ImageView
            android:id="@+id/btn_arrow_shrink"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:visibility="gone"
            android:alpha="0.5"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/btn_arrow_left_normal"/>-->
    </RelativeLayout>

    <!-- 菜单按钮项 -->
    <RelativeLayout
        android:id="@+id/menu_layout"
        android:layout_width="match_parent"
        android:layout_height="332px"
        android:layout_below="@+id/rl_btn_arrow"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7px"
        android:background="@drawable/shape_all"
        android:orientation="vertical"
        android:padding="0dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="21px"
            android:src="@drawable/btn_right_back_normal" />

        <!--<RelativeLayout
            android:id="@+id/rl_btn_back"
