<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/item_bt_color"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/select_dialog_item_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/grid_iv_margin" />
    <TextView
        android:id="@+id/select_dialog_item_tv"
        android:layout_width="100px"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Application Manager"
        android:lines="1"
        android:textSize="@dimen/gv_item_text_size"
        android:textColor="@color/white"
        />
</LinearLayout>
