<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main_layout"
    >

    <TextView
        android:layout_marginTop="@dimen/gd_tv_matop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/moreapps"
        android:focusable="false"
        android:textSize="@dimen/gd_tv_size"
        android:layout_gravity="center_horizontal"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/ll_view_matop"
        android:layout_gravity="center_horizontal"
        android:id="@+id/viewgroup_pagecount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/ll_view_mbootm"/>

    <View
        android:layout_marginTop="@dimen/gd_v_martop"
        android:layout_width="@dimen/gd_v_w"
        android:layout_height="@dimen/gd_v_h"
        android:layout_gravity="center_horizontal"
        android:background="@color/white"
        />
    <androidx.viewpager.widget.ViewPager
        android:layout_marginLeft="@dimen/viewpage_marleft"
        android:gravity="center_horizontal"
        android:id="@+id/viewpager_apps"
        android:descendantFocusability="afterDescendants"
        android:focusableInTouchMode="true"
        android:focusable="false"
        android:layout_width="@dimen/others_gridview_width"
        android:layout_height="@dimen/viewpage_h"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/viewpage_martop"
        >
    </androidx.viewpager.widget.ViewPager>

    <RelativeLayout
        android:id="@+id/gd_bottom_ll"
        android:layout_width="@dimen/rl_boom_w"
        android:layout_height="@dimen/rl_boom_h"
        android:layout_gravity="center_horizontal"
        android:focusable="true"
        android:layout_marginTop="@dimen/rl_martop"
        android:background="@drawable/bottom_bg"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/gd_bottom_im"
                android:layout_width="@dimen/rl_im_w"
                android:layout_height="@dimen/rl_im_w"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bottom_home_select" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/rl_te_mar"
                android:text="@string/home"
                android:textColor="@drawable/bottom_textcolor"
                android:textSize="@dimen/rl_te_size" />

        </LinearLayout>


    </RelativeLayout>
</FrameLayout>
